@model IEnumerable<Mollie.Api.Models.Mandate.MandateResponse>

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create", new { customerId = ViewContext.RouteData.Values["id"] })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDatetime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDatetime)
            </td>
            <td>
                @Html.ActionLink("Details", "Detail", new { customerId = ViewContext.RouteData.Values["id"], mandateId = item.Id })
            </td>
        </tr>
    }

</table>
